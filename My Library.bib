@article{zuermgassen2022,
  title = {Are Corporate Biodiversity Commitments Consistent with Delivering `Nature-Positive' Outcomes? {{A}} Review of `Nature-Positive' Definitions, Company Progress and Challenges},
  shorttitle = {Are Corporate Biodiversity Commitments Consistent with Delivering `Nature-Positive' Outcomes?},
  author = {{zu Ermgassen}, Sophus O. S. E. and Howard, Michael and Bennun, Leon and Addison, Prue F. E. and Bull, Joseph W. and Loveridge, Robin and Pollard, Edward and Starkey, Malcolm},
  year = {2022},
  month = dec,
  journal = {Journal of Cleaner Production},
  volume = {379},
  pages = {134798},
  issn = {0959-6526},
  doi = {10.1016/j.jclepro.2022.134798},
