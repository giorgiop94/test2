@techreport{porkka2022,
  title = {Global Water Cycle Shifts Far beyond Pre-Industrial Conditions -- Planetary Boundary for Freshwater Change Transgressed},
  author = {Porkka, Miina and Virkki, Vili and {Wang-Erlandsson}, Lan and Gerten, Dieter and Gleeson, Tom and Mohan, Chinchu and Fetzer, Ingo and Jaramillo, Fernando and Staal, Arie and te Wierik, Sofie and Tobian, Arne and van der Ent, Ruud and D{\"o}ll, Petra and Fl{\"o}rke, Martina and Gosling, Simon and Hanasaki, Naota and Satoh, Yusuke and Schmied, Hannes M{\"u}ller and Wanders, Niko and Rockstrom, Johan and Kummu, Matti},
  year = {2022},
  institution = {EarthArXiv},
  doi = {10.31223/X5BP8F},
  urldate = {2023-06-16},
  abstract = {Human actions compromise the many life-supporting functions provided by the freshwater cycle. Yet, scientific understanding of anthropogenic freshwater change and its long-term evolution is limited. Using a multi-model ensemble of global hydrological models, we estimate how, over a 145-year industrial period, streamflow and soil moisture have deviated from pre-industrial baseline conditions (defined by 5th--95th percentiles, at 0.5{$^\circ$} grid level and monthly time step). We find increased frequency of local deviations on {\textasciitilde}45\% of land area, mainly in regions under heavy direct or indirect human pressures. To estimate humanity's aggregate impact on the freshwater cycle, we present the evolution of deviation occurrence at regional to global scales. Currently, local streamflow and soil moisture deviations occur on 18.2\% and 15.8\% of global land area, respectively, which is 8.0 and 4.7 percentage points beyond the {\textasciitilde}3 percentage point wide pre-industrial variability envelope. Finally, we discuss applying our approach to define a planetary boundary for freshwater change. Our results indicate a substantial shift from stable pre-industrial streamflow and soil moisture conditions to persistently increasing change and a transgression of the freshwater change planetary boundary, calling for urgent actions to reduce human disturbance of the freshwater cycle.}
}

