@article{northey2016,
  title = {Water Footprinting and Mining: {{Where}} Are the Limitations and Opportunities?},
  author = {Northey, Stephen A. and Mudd, Gavin M. and Saarivuori, Elina and {Wessman-J{\"a}{\"a}skel{\"a}inen}, Helena and Haque, Nawshad},
