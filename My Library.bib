@article{bjorn2017,
  title = {Is {{Earth}} Recognized as a Finite System in Corporate Responsibility Reporting?},
  author = {Bj{\o}rn, Anders and Bey, Niki and Georg, Susse and R{\o}pke, Inge and Hauschild, Michael Zwicky},
