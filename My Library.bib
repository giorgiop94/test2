  keywords = {biodiversity crisis,conservation,denial,extinction,invertebrates,IUCN Red List,land snails,molluscs,Sixth Extinction,undescribed species},
  file = {/Users/giorgioparlato/Zotero/storage/9EDWLL5Z/Cowie et al. - 2022 - The Sixth Mass Extinction fact, fiction or specul.pdf;/Users/giorgioparlato/Zotero/storage/MXR3Y3NC/brv.html}
